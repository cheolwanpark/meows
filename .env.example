# ============================================================================
# Meows Configuration
# ============================================================================
# Copy this file to .env and update the values for your environment
# cp .env.example .env

# ============================================================================
# SECURITY - REQUIRED
# ============================================================================
# Encryption key for storing credentials (MUST be exactly 32 bytes)
# Generate with: openssl rand -base64 32 | cut -c1-32
MEOWS_ENCRYPTION_KEY=change-me-to-32-byte-random-key

# CSRF protection key (32+ character random string)
# Generate with: openssl rand -hex 32
CSRF_KEY=change-me-in-production-please-use-random-key

# ============================================================================
# DATABASE
# ============================================================================
DB_PATH=/data/meows.db

# ============================================================================
# SERVER PORTS
# ============================================================================
COLLECTOR_PORT=8080
FRONTEND_PORT=3000

# ============================================================================
# COLLECTOR SETTINGS
# ============================================================================
LOG_LEVEL=info
MAX_COMMENT_DEPTH=5
ENABLE_SWAGGER=true

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================
ENV=production
COLLECTOR_URL=http://collector:8080
